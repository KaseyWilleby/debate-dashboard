rules_version = '2';

// Firebase Storage Security Rules for Tournament Paperwork
service firebase.storage {
  match /b/{bucket}/o {
    // Tournament paperwork documents
    match /tournaments/{tournamentId}/paperwork/{document=**} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;

      // Allow write access to authenticated users (for uploads)
      allow write: if request.auth != null;

      // Allow delete only for admins or the uploader
      allow delete: if request.auth != null &&
        (request.auth.token.role == 'admin' ||
         resource.metadata.uploadedBy == request.auth.uid);
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
